# Project Configuration
PROJECT_NAME=Wegent Evaluate
VERSION=1.0.0
ENVIRONMENT=development

# Database Configuration
DATABASE_URL=mysql+asyncmy://evaluate:evaluate123@localhost:3306/wegent_evaluate

# Raw DB Configuration (read-only access to task_manager database)
# Set this to enable daily report sync from raw data
RAW_DATABASE_URL=mysql+asyncmy://user:pass@localhost:3306/task_manager

# External API Configuration
EXTERNAL_API_BASE_URL=http://127.0.0.1:8000
EXTERNAL_API_QA_HISTORY_PATH=/api/v1/knowledge-base/qa-history

# External API Authentication Configuration
EXTERNAL_API_LOGIN_PATH=/api/auth/login
EXTERNAL_API_USERNAME=admin
EXTERNAL_API_PASSWORD=your_password

# RAGAS LLM Configuration
RAGAS_LLM_MODEL=gpt-4
RAGAS_LLM_API_KEY=your_openai_api_key
RAGAS_LLM_BASE_URL=https://api.openai.com/v1

# RAGAS Embedding Configuration
RAGAS_EMBEDDING_MODEL=text-embedding-3-small
RAGAS_EMBEDDING_API_KEY=your_openai_api_key
RAGAS_EMBEDDING_BASE_URL=https://api.openai.com/v1

# Analysis LLM Configuration
ANALYSIS_LLM_MODEL=gpt-4
ANALYSIS_LLM_API_KEY=your_openai_api_key
ANALYSIS_LLM_BASE_URL=https://api.openai.com/v1
# Language for LLM analysis output: "zh" (Chinese, default) or "en" (English)
ANALYSIS_LANGUAGE=zh

# Scheduled Task Configuration
SYNC_CRON_EXPRESSION=0 2 * * *
EVALUATION_CRON_EXPRESSION=0 4 * * *

# Raw Data Sync Task Configuration
RAW_SYNC_HOURLY_CRON=0 * * * *
RAW_SYNC_DAILY_CRON=0 1 * * *
RAW_SYNC_LOOKBACK_HOURS=2

# Evaluation Configuration
EVALUATION_BATCH_SIZE=10
EVALUATION_CONCURRENCY=1

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000
